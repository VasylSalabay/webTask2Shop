@model Domain.Entities.Book
<div class="well">
    <div class="row">
        <div class="col-xl-10">
            <h3>
                <strong>@Model.Name</strong>
            </h3>
            <h4>
                <strong>@Model.Author</strong>
            </h4>
        </div>
        <div class="col-xl-2">
            <h3>
                <strong id="price" class="pull-right custom-control-label">
                    @Model.Price.ToString("# uah")
                </strong>
            </h3>
            @using (Html.BeginForm("AddToCart", "Cart"))
            {
                <div class="pull-right">
                    @Html.HiddenFor(x => x.BookId)
                    @Html.Hidden("returnUrl",Request.Url.PathAndQuery)
                    <input type="submit" class="btn btn-success" value="Добавити в корзину"/>
                </div>
            }
        </div>
    </div>
    <span class="lead">
        @Model.Description
    </span>

</div>

