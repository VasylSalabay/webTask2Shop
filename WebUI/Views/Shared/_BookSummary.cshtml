@model Domain.Entities.Book
<div class="well">
    <div class="row">
        <div class="col-xl-10">
            <h3>
                <strong>@Model.Name</strong>
            </h3>
            <h4>
                <strong>@Model.Author</strong>
            </h4>
        </div>
        <div class="col-xl-2">
            <h3>
                <strong class="pull-right custom-control-label">
                    @Model.Price.ToString("# uah")
                </strong>
            </h3>
        </div>
    </div>
    <span class="lead">
        @Model.Description
    </span>

</div>

